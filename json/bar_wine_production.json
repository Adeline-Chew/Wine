{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "background": "transparent",
    "height": 500,
    "title": "Top Wine Production Countries",
    "params": [
        {
            "name": "Year_Selection",
            "value": 2016,
            "bind": {
                "input": "range",
                "min": 2012,
                "max": 2016,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Year == Year_Selection"
        }
    ],
    "data": {
        "url": "https://raw.githubusercontent.com/Adeline-Chew/Wine/main/data/production.csv"
    },
    "mark": {
        "type": "bar",
        "color": "#96BAFF"
    },
    "encoding": {
        "x": {
            "field": "Country",
            "title": "Country",
            "type": "nominal",

            "axis": {
                "labelAngle": 0,
                "grid": false
            }
        },
        "y": {
            "field": "Wine production in mhl",
            "title": "Wine production in mhl",
            "type": "quantitative",
            "axis": {
                "grid": false
            }
        },
        "tooltip": [
            {
                "field": "Country",
                "title": "Country",
                "type": "nominal"
            },
            {
                "field": "Year",
                "title": "Year",
                "type": "ordinal"
            },
            {
                "field": "Wine production in mhl",
                "title": "Wine production in mhl",
                "type": "quantitative"
            }
        ]
    }
}
