{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "background": "transparent",
    "config": { "view": { "stroke": "transparent" } },
    "data": {
        "url": "https://raw.githubusercontent.com/Adeline-Chew/Wine/main/json/world_topo.json",
        "format": { "type": "topojson", "feature": "world" }
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/Adeline-Chew/FIT3179-Data-Visualisation/main/data/drinks.csv"
                },
                "key": "Country",
                "fields": ["Total"]
            }
        },

        { "calculate": "datum.Total + 1", "as": "Total Consumption" }
    ],
    "mark": { "type": "geoshape" },
    "encoding": {
        "color": {
            "field": "Total Consumption",
            "type": "quantitative",
            "scale": {
                "type": "linear",
                "domain": [0, 2, 4, 6, 8, 10, 12, 14],
                "range": [
                    "#ffe3fe",
                    "#ecc7ec",
                    "#c996cc",
                    "#af82c0",
                    "#916bb3",
                    "#7355a6",
                    "#553e98",
                    "#3d2c8d"
                ]
            }
        },
        "projection": {
            "type": "equirectangular"
        },
        "tooltip": [
            {
                "field": "properties.name",
                "type": "nominal",
                "title": "Country"
            },
            { "field": "Total", "type": "quantitative" }
        ]
    }
}
