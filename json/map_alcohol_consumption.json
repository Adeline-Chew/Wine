{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "background": "transparent",
    "config": { "view": { "stroke": "transparent" } },
    "data": {
        "url": "https://raw.githubusercontent.com/Adeline-Chew/Wine/main/json/world_topo.json",
        "format": { "type": "topojson", "feature": "world" }
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/Adeline-Chew/FIT3179-Data-Visualisation/main/data/drinks.csv"
                },
                "key": "Country",
                "fields": ["Total"]
            }
        },

        { "calculate": "datum.Total + 1", "as": "Total Consumption (litre)" }
    ],
    "mark": { "type": "geoshape" },
    "encoding": {
        "color": {
            "field": "Total Consumption (litre)",
            "type": "quantitative",
            "scale": {
                "type": "linear",
                "domain": [0, 2, 4, 6, 8, 10, 12, 14],
                "range": [
                    "#39a2db",
                    "#4d9acc",
                    "#6192bd",
                    "#738ab0",
                    "#917e99",
                    "#aa7486",
                    "#c06b76",
                    "#df5e5e"
                ]
            }
        },
        "projection": {
            "type": "equirectangular"
        },
        "tooltip": [
            {
                "field": "properties.name",
                "type": "nominal",
                "title": "Country"
            },
            { "field": "Total", "type": "quantitative" }
        ]
    }
}
