{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 800,
    "data": {
        "url": "https://raw.githubusercontent.com/Adeline-Chew/FIT3179-Data-Visualisation/main/json/world_topo.json",
        "format": { "type": "topojson", "feature": "world" }
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/Adeline-Chew/FIT3179-Data-Visualisation/main/data/drinks.csv"
                },
                "key": "Country",
                "fields": ["Total"]
            }
        },

        { "calculate": "datum.Total + 1", "as": "Total Consumption" }
    ],
    "mark": { "type": "geoshape" },
    "encoding": {
        "color": {
            "field": "Total Consumption",
            "type": "quantitative",
            "scale": {
                "type": "linear",
                "domain": [0, 2, 4, 6, 8, 10, 12, 14],
                "range": [
                    "#80ed99",
                    "#62be8f",
                    "#58af8c",
                    "#50a289",
                    "#408984",
                    "#367881",
                    "#2b667d",
                    "#22577a"
                ]
            }
        },
        "projection": {
            "type": "equirectangular"
        },
        "tooltip": [
            {
                "field": "properties.name",
                "type": "nominal",
                "title": "Country"
            },
            { "field": "Total", "type": "quantitative" }
        ]
    }
}
