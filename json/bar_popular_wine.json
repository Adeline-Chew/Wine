{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "background": "transparent",
    "config": { "view": { "stroke": "transparent" } },
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/Adeline-Chew/Wine/main/data/Popular_wine.csv"
    },
    "layer": [
        {
            "mark": {
                "type": "bar",
                "width": { "band": 0.2 },
                "fillOpacity": 0.9,
                "cursor": "pointer"
            },
            "params": [
                {
                    "name": "highlight",
                    "select": { "type": "point", "on": "mouseover" }
                },
                { "name": "select", "select": "point" }
            ],
            "encoding": {
                "fillOpacity": {
                    "condition": { "param": "select", "value": 1 },
                    "value": 0.3
                },
                "strokeWidth": {
                    "condition": [
                        {
                            "param": "select",
                            "empty": false,
                            "value": 2
                        },
                        {
                            "param": "highlight",
                            "empty": false,
                            "value": 1
                        }
                    ],
                    "value": 0
                },
                "color": {
                    "field": "Variety",
                    "type": "nominal",
                    "scale": {
                        "type": "ordinal",
                        "domain": [
                            "Cabernet Franc",
                            "Cabernet Sauvignon",
                            "Chardonnay",
                            "Merlot",
                            "Pinot Noir",
                            "Red Blend",
                            "Riesling",
                            "Sauvignon Blanc",
                            "Syrah",
                            "Zinfandel"
                        ],
                        "range": [
                            "#DA7F8F",
                            "#DA7F8F",
                            "#FFD868",
                            "#DA7F8F",
                            "#DA7F8F",
                            "#DA7F8F",
                            "#FFD868",
                            "#FFD868",
                            "#DA7F8F",
                            "#FFD868"
                        ]
                    },
                    "legend": null
                },
                "y": {
                    "field": "Occurrence",
                    "title": "Occurrence in Wine Reviews",
                    "type": "quantitative",
                    "sort": "ascending",
                    "axis": {
                        "grid": false
                    }
                },
                "x": {
                    "field": "Variety",
                    "type": "nominal",
                    "axis": {
                        "labelAngle": 0,
                        "grid": false
                    }
                },
                "tooltip": [
                    {
                        "field": "Variety",
                        "title": "Variety",
                        "type": "nominal"
                    },
                    {
                        "field": "Occurrence",
                        "title": "Occurrence in Wine Reviews",
                        "type": "quantitative"
                    }
                ]
            }
        },
        {
            "transform": [
                {
                    "filter": "datum.Occurrence == 10340"
                },
                {
                    "calculate": "'Pinot Noir: Worldâ€˜s most popular light-bodied red wine'",
                    "as": "text_annotation"
                }
            ],
            "mark": { "type": "text", "align": "center", "dx": 2, "dy": -210 },
            "encoding": {
                "text": { "field": "text_annotation" }
            }
        },
        {
            "mark": {
                "size": 1500,
                "type": "circle",
                "color": "#C9CCD5",
                "fillOpacity": 1
            },
            "encoding": {
                "y": {
                    "field": "Occurrence",
                    "title": "Occurrence in Wine Reviews",
                    "type": "quantitative",
                    "sort": "ascending"
                },
                "x": {
                    "field": "Variety",
                    "type": "nominal",
                    "axis": {
                        "labelAngle": 0,
                        "grid": false
                    }
                },
                "tooltip": [
                    {
                        "field": "Variety",
                        "type": "nominal"
                    },
                    {
                        "field": "Occurrence",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ]
}
