{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 600,
    "background": "transparent",
    "config": { "view": { "stroke": "transparent" } },
    "data": {
        "values": [
            { "category": "Water", "value": 85 },
            { "category": "Alcohol", "value": 13 },
            { "category": "Glycerol", "value": 1 },
            { "category": "Acids", "value": 0.5 },
            { "category": "Carbohydrates", "value": 0.4 },
            { "category": "Phenolics", "value": 0.1 }
        ]
    },
    "mark": "arc",
    "encoding": {
        "theta": { "field": "value", "type": "quantitative" },
        "color": {
            "field": "category",
            "title": "Category",
            "type": "nominal",
            "scale": {
                "type": "linear",
                "domain": [
                    "Water",
                    "Alcohol",
                    "Glycerol",
                    "Acids",
                    "Carbohydrates",
                    "Phenolics"
                ],
                "range": [
                    "#889EAF",
                    "#C37B89",
                    "#BCCC9A",
                    "#D1E8E4",
                    "#4B6587",
                    "#E4D8DC"
                ]
            }
        },
        "tooltip": [
            { "field": "category", "title": "Category", "type": "nominal" },
            { "field": "value", "title": "% in wine", "type": "quantitative" }
        ]
    }
}
